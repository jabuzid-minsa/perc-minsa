<% content_for :stylesheet do %>
    <%= stylesheet_link_tag 'datatable', media: 'screen', 'data-turbolinks-track' => true %>
<% end %>

<% content_for :breadcrumb_title do %><%= DistributionArea.model_name.human %><% end %>
<% content_for :breadcrumb_list do %>
    <li class="active"><strong><%= t('app.texts.creating', element: DistributionArea.model_name.human(:count => 2)) %></strong></li>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5><%= t('app.texts.create', element: DistributionArea.model_name.human(:count => 2)) %></h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-bordered dataTable no-footer" id="fixed_table" cellspacing="0">
            <thead>
            <tr>
              <td><%= Income.human_attribute_name(:cost_center_id) %></td>
              <% @cost_centers.each do |cost_center| %>
                  <td data-service="<%= cost_center.id %>"><%= cost_center.description %></td>
              <% end %>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td><%= Income.human_attribute_name(:value) %></td>
              <% @cost_centers.each do |cost_center| %>
                  <td><%= text_field_tag 'data_service', nil, step: 2, class: 'form-control size-100 decimal_numbers_2 ajax_values',
                                         data: {cost_center: cost_center.id},
                                         value: acces_attribute_incomes(@incomes.find_by_cost_center_id(cost_center.id), 'value') %>
                  </td>
              <% end %>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
    <%= javascript_include_tag 'datatable', 'data-turbolinks-track' => true %>

    <script type="text/javascript">
      $(function() {
        var ajax_parameters = {
              year: <%= session[:year] %>,
              month: <%= session[:month] %>,
              cost_center: 0,
              value: 0,
            },
            table = $('#fixed_table').DataTable({
              bInfo: 					false,
              searching: 			false,
              bSort: 					false,
              scrollY:        "300px",
              scrollX:        true,
              scrollCollapse: true,
              paging:         false,
              fixedColumns:   {
                leftColumns: 1
              }
            }),
            current_meters = 0;

        $('.ajax_values').focusin(function () {
          current_meters = $(this).val();
        });

        $('.ajax_values').focusout(function () {
          if (current_meters != $(this).val()) {
            ajax_parameters.cost_center = $(this).data('cost-center');
            ajax_parameters.value = $(this).val();
            ajax_request(ajax_parameters);
          }
        });

      });

      function ajax_request(parameters) {
        $.ajax({
          url: '<%= save_incomes_path %>',
          type: "GET",
          dataType: "json",
          data: parameters,
          contentType: "script",
          success: function(data) {
            //
          },
          error: function(xhr,exception,status) {
            console.log('entra al error');
            console.log(xhr);
            console.log(exception);
            console.log(status);
          }
        });
      }
    </script>
<% end %>