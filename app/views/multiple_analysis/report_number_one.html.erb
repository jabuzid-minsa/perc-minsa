	<div class="row">
		<div class="col-lg-12">
			<h2><%= @entity.description %></h2>
			<br>
			<%= render 'multiple_analysis/partials/control_panel' %>

			<%= render 'multiple_analysis/partials/concepts_by_date' %>

			<%= render 'multiple_analysis/partials/consolidated' %>

			<%= render 'multiple_analysis/partials/concepts_by_cost_centers' %>

			<%= render 'multiple_analysis/partials/weight_percentage' %>

			<%= render 'multiple_analysis/partials/indirect_costs' %>
		</div>
	</div>
</div>

