<% content_for :stylesheet do %>
<% end %>

<% content_for :breadcrumb_title do %><%= t('app.sections.analysis_and_graphs') %><% end %>
<% content_for :breadcrumb_list do %>
		<li class="active"><strong><%= t('app.analysis_tables.multiple_months.selection_months.title') %></strong></li>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5><%= t('app.analysis_tables.multiple_months.selection_months.title') %></h5>
					<div class="ibox-tools">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
					</div>
				</div>
				<div class="ibox-content">
					<%= form_tag(multiple_set_range_dates_url, method: 'post', html: { class: 'p-w-md' }) do  %>
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										<h2 class="font-noraml"><%= t('app.analysis_tables.multiple_months.selection_months.selection_range') %></h2>
										<div class="input-daterange input-group"  id="datepicker">
											<input type="text" class="input-sm form-control" name="date[start]" value="<%= session[:date_start] %>" required="required" />
											<span class="input-group-addon"><%= t('app.analysis_tables.multiple_months.selection_months.to') %></span>
											<input type="text" class="input-sm form-control" name="date[end]" value="<%= session[:date_end] %>" required="required" />
										</div>										
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 text-left">
									<%= submit_tag t('app.analysis_tables.multiple_months.selection_months.button_analyze'), class: 'btn btn-primary' %>
								</div>
							</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<% content_for :javascript do %>
		<script type="text/javascript">
			$('.input-daterange').datepicker({
				format: "mm/yyyy",
    		minViewMode: 1,
				autoclose: true
			});
		</script>
<% end %>
