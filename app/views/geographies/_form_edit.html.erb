<div class="row">
  <%= form_for(@geography) do |f| %>
      <% if @geography.errors.any? %>
          <div id="alert alert-danger" class="bg-danger">
            <ul>
              <% @geography.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="col-md-6">
        <div class="form-group">
          <% if @geography.fifth_level != 0 %>
              <label for=""><%= t('code_attributes', attr: Geography.human_attribute_name(:fifth_level)) %></label>
              <%= f.text_field :fifth_level, class: 'form-control', id: 'code_country', tabindex: '1', disabled: 'disabled' %>
          <% elsif @geography.fourth_level != 0 %>
              <label for=""><%= t('code_attributes', attr: Geography.human_attribute_name(:fourth_level)) %></label>
              <%= f.text_field :fourth_level, class: 'form-control', id: 'code_country', tabindex: '1', disabled: 'disabled' %>
          <% elsif @geography.third_level != 0 %>
              <label for=""><%= t('code_attributes', attr: Geography.human_attribute_name(:third_level)) %></label>
              <%= f.text_field :third_level, class: 'form-control', id: 'code_country', tabindex: '1', disabled: 'disabled' %>
          <% elsif @geography.second_level != 0 %>
              <label for=""><%= t('code_attributes', attr: Geography.human_attribute_name(:second_level)) %></label>
              <%= f.text_field :second_level, class: 'form-control', id: 'code_country', tabindex: '1', disabled: 'disabled' %>
          <% else %>
              <label for=""><%= t('code_attributes', attr: Geography.human_attribute_name(:first_level)) %></label>
              <%= f.text_field :first_level, class: 'form-control', id: 'code_country', tabindex: '1', disabled: 'disabled' %>
          <% end %>

        </div>
        <% if @geography.second_level.to_i == 0 %>
          <div class="form-group">
            <%= f.label :depth_detail %>
            <%= f.text_field :depth_detail, class: 'form-control', tabindex: '3' %>
          </div>
        <% end %>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'form-control', placeholder: 'DescripciÃ³n', tabindex: '2' %>
        </div>
        <div class="form-group">
          <%= f.label :state %>
          <%= check_state(f) %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6 text-right">
            <%= link_to t('app.buttons.back'), :back, class: 'btn btn-outline btn-success' %>
          </div>
          <div class="col-md-6 text-left">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
  <% end %>
</div>
