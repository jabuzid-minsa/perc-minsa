<% content_for :stylesheet do %>
<% end %>

<div class="middle-box text-center loginscreen animated fadeInDown" style="width: 400px !important;">
	<%= image_tag("logo_universal_health.png", class: "img-responsive pos_abs img-background") %>
	<div class="">
		<div class="text-left">
			<h1 class="logo-name no-margins text-center" style="width: 630px; margin-left: -115px !important;">
        <%= t('app.name').upcase + ' 2.0' %>
      </h1>
		</div>
		<h3><%= t('.forgot_your_password') %></h3>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'm-t' }) do |f| %>
				<% if devise_error_messages!.present? %>
            <div class="form-group text-left">
              <div class="alert alert-danger" role="alert">
                <%= devise_error_messages! %>
              </div>
            </div>
        <% end %>

				<div class="form-group text-left">
				<%= f.label :email %><br />
				<%= f.email_field :email, autofocus: true, class: 'form-control', required: 'required' %>
				</div>

				<div class="text-center">
					<%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
				</div>
		<% end %>
		<div class="text-center spacing-inside-t5 p-w-xl">
			<%= render "devise/shared/links" %>
		</div>
		<p class="m-t"> <small><%= t('app.copytigth.ops') %></small> </p>
		<p class="m-t"> <small><%= t('app.copytigth.incubo') %></small> </p>
		<div class="row">
			<div class="col-md-12 text-center">
        <%= image_tag("logos-organizations.#{I18n.locale}.png", class: "img-responsive") %>
      </div>
		</div>
	</div>
</div>

<% content_for :javascript do %>
<% end %>
